            <select name="pelaajahome">
            <% pelaaja.forEach(element => { %>
            <option label=" <%= element.playerName %>" value="<%= element.playerName %>">
            <% }) %>
            </select>
            <input type="radio" id="biljardiresulthome" name="biljardiresult" checked>
        <% } catch (error) { %>
            <% return true; %>
        <% } %>

        <% try { %>
            <label>Pelaaja 2</label>
            <select name="pelaajaaway">
            <% pelaaja.forEach(element => { %>
            <option label=" <%= element.playerName %>" value="<%= element.playerName %>">
            <% }) %>
            </select>
            <input type="radio" id="biljardiresultaway" name="biljardiresult">
        <% } catch (error) { %>
            <% return true; %>
        <% } %>
