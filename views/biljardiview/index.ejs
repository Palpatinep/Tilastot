<!DOCTYPE html>
<html>
<head>
    <title>Biljardi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Passion+One&display=swap" rel="stylesheet">
</head>
<body>
    <h3>Biljardi tilastot</h3>

    <p style="margin-bottom: 20px;">Pelin tulos:</p>
    <form action="biljardi" method="POST">

        <label>Voittaja: </label>
        <div style="display: inline-flex; margin-left: 15px" class="select">
            <select name="winner">
            <% pelaaja.forEach(element => { %>
            <option label=" <%= element.playerName %>" value="<%= element.playerName %>">
            <% }) %>
            </select>
          </div>
        
        <br>
        <label style="margin-top: 20px">Häviäjä: </label>
        <div style="display: inline-flex; margin-top: 20px; margin-left: 17px" class="select">
            <select name="loser">
            <% pelaaja.forEach(element => { %>
            <option label=" <%= element.playerName %>" value="<%= element.playerName %>">
            <% }) %>
            </select>
        </div>     

        <br>
        <div style="margin-top: 15px;">
          <input type="checkbox" id="biljardilumieracheckbox" name="biljardilumieracheckbox">
          <label for="biljardilumieracheckbox">Lumierät</label>
          <button type="submit" style="margin-left: 25px;" class="myButton" >OK</button>
        </div>

    </form>

<h3 style="margin-top: 50px;" >Aikaisempien pelien tulokset:</h3>

        <% biljardipelit.forEach(element => { %>
            <% const date =  element.MatchDate.getDate() + "." + element.MatchDate.getMonth() + "." + element.MatchDate.getFullYear() + ", " + element.MatchDate.getHours() + ":" + element.MatchDate.getMinutes() %>
            <li class="resultclass" >Voittaja: <%= element.winner %>, Häviäjä: <%= element.loser %>, Lumierät: <%= element.lumierat %>, Ajankohta: <%= date %></li>
          <% }) %>

</body>
</html>